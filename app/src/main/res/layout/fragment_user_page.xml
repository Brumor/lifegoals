<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.lifegoals.UserPageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#228B22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="60dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold|italic"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="30sp"
            android:layout_marginRight="15dp"
            android:shadowColor="#98fb98"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="openNewActivity"
            android:id="@+id/add_goal"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A3A3A3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Paul Bricout"
            android:textSize="20sp"
            android:padding="15dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/test_image"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A3A3A3"
        android:alpha="0.2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current goals : "
        android:textStyle="italic"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:background="#228B22"
        android:paddingLeft="30dp"
        android:padding="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A3A3A3"
        android:alpha="0.2"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_goal_listview"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</LinearLayout>
